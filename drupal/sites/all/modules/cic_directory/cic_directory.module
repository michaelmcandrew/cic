	$result = db_query($sql, $arg[0], $arg[1], $arg[2], $arg[3], $arg[4], $arg[5], $arg[6], $arg[7], $arg[8], $arg[9]);


	//put them in a format that suitable to be sent to a google map
	while ($data = db_fetch_object($result)) {
